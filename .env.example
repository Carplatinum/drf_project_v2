# Django settings
DJANGO_SECRET_KEY=your-secret-key-here
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# PostgreSQL settings
POSTGRES_DB=drf_project
POSTGRES_USER=drf_user
POSTGRES_PASSWORD=your_db_password_here

# Database host
# Use 'db' when running inside Docker (matches docker-compose service name)
POSTGRES_HOST=db

# For local development without Docker, you might want to use:
# POSTGRES_HOST=localhost

POSTGRES_PORT=5432

# Stripe API key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here

# Redis and Celery settings
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=${REDIS_URL}
CELERY_RESULT_BACKEND=${REDIS_URL}

# Flag to indicate running inside Docker environment
IS_DOCKER=True
