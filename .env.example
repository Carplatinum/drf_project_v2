# Секретный ключ Django (вставьте свой ключ)
DJANGO_SECRET_KEY=your-django-secret-key

# Режим отладки (True или False)
DJANGO_DEBUG=True

# Разрешённые хосты через запятую, например: localhost,127.0.0.1
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Настройки базы данных PostgreSQL
POSTGRES_DB=drf_project
POSTGRES_USER=drf_user
POSTGRES_PASSWORD=your-postgres-password
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Stripe секретный ключ для платежей
STRIPE_SECRET_KEY=your-stripe-secret-key

# Настройки Redis и Celery брокера
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
REDIS_URL=redis://redis:6379/0
